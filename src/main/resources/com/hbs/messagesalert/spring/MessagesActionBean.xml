<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="messagesAction" class="com.hbs.messagesalert.action.MessagesAction"
		scope="session">
		<property name="messagesBo" ref="messagesBo"></property>
	</bean>
	<bean id="messagesUserAction" class="com.hbs.messagesalert.action.MessagesUserAction"
		scope="session">
		<property name="messagesBo" ref="messagesBo"></property>
		<property name="adminBo" ref="adminBo"></property>
	</bean>
</beans>