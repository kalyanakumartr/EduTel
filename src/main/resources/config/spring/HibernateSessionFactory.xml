<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- Hibernate session factory -->
	<bean id="sessionFactory" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="targetSource" ref="shardSessionFactoryTargetSource" />
	</bean>
	<bean id="shardSessionFactoryTargetSource"
		class="com.hbs.edutel.hibernate3.support.MultiTenantRoutingSessionFactory">
		<property name="defaultSessionFactoryKey" value="${defaultSessionFactoryKey}" />
		<property name="sessionFactories">
			<map>
				<entry key="edutel" value-ref="eduTelSessionFactory" />
			</map>
		</property>
	</bean>
	<bean id="eduTelSessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="eduTelDataSource"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.bytecode.use_reflection_optimizer">false</prop>
				<prop key="hibernate.jdbc.batch_size">0</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.c3p0.min_size">5</prop>
				<prop key="hibernate.c3p0.max_size">50</prop>
				<prop key="hibernate.c3p0.timeout">1800</prop>
				<prop key="hibernate.c3p0.max_statements">0</prop>
				<prop key="hibernate.c3p0.idle_test_period">300</prop>
				<prop key="hibernate.c3p0.acquire_increment">1</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>

				<!-- Common Hibernate Mapping Files -->
				<value>com/hbs/edutel/common/model/ConstProperty.hbm.xml</value>
				<value>com/hbs/edutel/common/model/Roles.hbm.xml</value>
				<value>com/hbs/edutel/common/model/LogUser.hbm.xml</value>
				<value>com/hbs/edutel/common/model/UserReminderQuery.hbm.xml</value>
				<value>com/hbs/edutel/common/model/UserRoles.hbm.xml</value>
				<value>com/hbs/edutel/common/model/Users.hbm.xml</value>
				<value>com/hbs/edutel/common/model/StudentsMarks.hbm.xml</value>

				<!-- Common Menu Hibernate Mapping Files -->
				<value>com/hbs/edutel/menucomponent/model/MaMenu.hbm.xml</value>
				<value>com/hbs/edutel/menucomponent/model/MaMenuRole.hbm.xml</value>

				<value>com/hbs/edutel/model/SerialKeyGenerate.hbm.xml</value>
				<value>com/hbs/edutel/model/SerialKeyUserMapping.hbm.xml</value>
				<value>com/hbs/edutel/model/StudentEnquiry.hbm.xml</value>
				<value>com/hbs/edutel/model/College.hbm.xml</value>
				<value>com/hbs/edutel/model/School.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineEBook.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineEKeyPoints.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineEBluePrint.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineExam.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineExamAssigned.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlinePractiseExam.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineExamQuestion.hbm.xml</value>
				<value>com/hbs/edutel/model/OnlineExamQuestionAnswerMapping.hbm.xml
				</value>
				<value>com/hbs/edutel/model/OnlineTestSeriesExamQuestionAnswerMapping.hbm.xml
				</value>
				<value>com/hbs/edutel/model/QueryDiscussion.hbm.xml</value>
				<value>com/hbs/edutel/model/InformationAlerts.hbm.xml</value>
				<value>com/hbs/edutel/model/ToppersClub.hbm.xml</value>
				<value>com/hbs/edutel/model/AutoGeneratedId.hbm.xml</value>
				<value>com/hbs/edutel/model/CollegeEForm.hbm.xml</value>
				<value>com/hbs/messagesalert/model/MessagesBeanInformation.hbm.xml
				</value>
				<value>com/hbs/messagesalert/model/MessagesBeanFieldInformation.hbm.xml
				</value>
				<value>com/hbs/messagesalert/model/Messages.hbm.xml</value>
				<value>com/hbs/messagesalert/model/MessagesUserMapping.hbm.xml
				</value>
				<value>com/hbs/messagesalert/model/MessagesUsersGroup.hbm.xml
				</value>
			</list>
		</property>
	</bean>
</beans>
